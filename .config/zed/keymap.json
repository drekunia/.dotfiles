// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      "alt-q": "terminal_panel::Toggle"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      // "ctrl-c": ["workspace::SendKeystrokes", "escape"],

      "space f n": "project_panel::NewFile",
      "a": "project_panel::NewFile",
      "d": "project_panel::Delete",
      "ctrl-shift-n": "project_panel::NewDirectory",
      "A": "project_panel::NewDirectory",
      "r": "project_panel::Rename",
      "y": "project_panel::Copy",
      "c": "workspace::CopyRelativePath",
      "x": "project_panel::Cut",

      "s": "project_panel::OpenSplitVertical",
      "S": "project_panel::OpenSplitHorizontal",
      "t": "project_panel::Open",
      "H": "project_panel::ToggleHideGitIgnore"
    }
  },
  {
    "context": "EmptyPane || SharedScreen || ProjectPanel && not_editing || Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      "space f r": "projects::OpenRecent",
      "space f f": "file_finder::Toggle",
      "space space": "file_finder::Toggle",
      "space f g": "workspace::NewSearch",

      "space w l": "workspace::ToggleRightDock",
      "space w right": "workspace::ToggleRightDock",
      "space w h": "workspace::ToggleLeftDock",
      "space w left": "workspace::ToggleLeftDock",

      "space f t": "terminal_panel::Toggle",
      "space l": "zed::Extensions",
      "space L": "zed::Extensions"
    }
  },
  {
    "context": "EmptyPane || SharedScreen || Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      "space f n": "workspace::NewFile"
    }
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      "space m p": "markdown::OpenPreview",
      "space m P": "markdown::OpenPreviewToTheSide",

      "space x x": "diagnostics::Deploy",

      "space f e": "pane::RevealInProjectPanel",
      "space e": "pane::RevealInProjectPanel",

      "space -": "pane::SplitDown",
      "space |": "pane::SplitRight"
    }
  },
  {
    "context": "Editor && vim_mode == normal || vim_mode == visual && !VimWaiting && !menu",
    "bindings": {
      "B": ["workspace::SendKeystrokes", "^"],
      "E": ["workspace::SendKeystrokes", "$"],
      "J": "editor::MoveLineDown",
      "K": "editor::MoveLineUp",

      "c": ["workspace::SendKeystrokes", "\" _ c"],
      "C": ["workspace::SendKeystrokes", "\" _ C"],
      // "d": ["workspace::SendKeystrokes", "\" _ d"],
      // "D": ["workspace::SendKeystrokes", "\" _ D"],
      "s": ["workspace::SendKeystrokes", "\" _ s"],
      "S": ["workspace::SendKeystrokes", "\" _ S"],
      "x": ["workspace::SendKeystrokes", "\" _ x"],
      "X": ["workspace::SendKeystrokes", "\" _ X"],

      "g c": "editor::ToggleComments"
    }
  },
  {
    "context": "Editor && vim_mode == insert && !VimWaiting && !menu",
    "bindings": {
      "j k": "vim::NormalBefore",
      "k j": "vim::NormalBefore"
    }
  }
]
